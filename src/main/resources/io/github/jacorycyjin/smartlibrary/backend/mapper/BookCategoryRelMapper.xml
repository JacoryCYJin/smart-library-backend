<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.jacorycyjin.smartlibrary.backend.mapper.BookCategoryRelMapper">

    <!-- 批量查询图书的分类关联信息 -->
    <select id="selectByBookIds" resultType="map">
        SELECT 
            book_id AS bookId,
            category_id AS categoryId
        FROM book_category_rel
        WHERE book_id IN
        <foreach collection="bookIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND deleted = 0
    </select>
</mapper>
